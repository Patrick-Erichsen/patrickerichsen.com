---
import siteConfig from '../site.config'
---

<footer class="mt-24 pt-8 border-t border-foreground/10 text-foreground-muted text-sm">
  <div class="flex items-center justify-between">
    <div class="flex gap-6">
      {
        siteConfig.socialLinks.github && (
          <a
            href={siteConfig.socialLinks.github}
            class="text-foreground-muted hover:text-foreground no-underline transition-colors"
            target="_blank"
            rel="noreferrer noopener"
          >
            GitHub
          </a>
        )
      }
      {
        siteConfig.socialLinks.twitter && (
          <a
            href={siteConfig.socialLinks.twitter}
            class="text-foreground-muted hover:text-foreground no-underline transition-colors"
            target="_blank"
            rel="noreferrer noopener"
          >
            X
          </a>
        )
      }
    </div>
    <span>{siteConfig.author} &copy; {new Date().getFullYear()}</span>
  </div>
</footer>
